  }
  return '';
}

/**
 * Extracts an nid from an autocomplete key
 */
function ms_core_extract_nid_from_autocomplete_key($name) {
  if (preg_match('/^\[(\d+)\]/', $name, $matches) > 0) {
    return (int) $matches[1];
  }
  return NULL;
}

