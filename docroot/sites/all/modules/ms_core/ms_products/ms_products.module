/**
 * Show a listing of all purchases
 */
function ms_products_show_purchases($module) {
  global $user;
  // this will be filled with an array of our content
  $build = array();
  $name = '';

  $headers = array(
    array(
      'data' => t('Start Date'),
      'class' => array('ms_products_purchase_start_date_header'),
      'field' => 'd.start_date',
      'sort' => 'desc',
    ),
    array(
      'data' => t('Expiration'),
      'class' => array('ms_products_purchase_expiration_header'),
      'field' => 'd.expiration',
      'sort' => 'desc',
    ),
    array(
      'data' => t('User'),
      'class' => array('ms_products_purchase_user_header'),
      'field' => 'u.name',
      'sort' => 'desc',
    ),
    array(
      'data' => t('Product'),
      'class' => array('ms_products_purchase_name_header'),
      'field' => 'p.name',
      'sort' => 'desc',
    ),
    array(
      'data' => t('Status'),
      'class' => array('ms_products_purchase_status_header'),
      'field' => 'd.status',
      'sort' => 'desc',
    ),
    array(
      'data' => t('Payments'),
      'class' => array('ms_products_purchase_current_payments_header'),
      'field' => 'd.current_payments',
      'sort' => 'desc',
    ),
    array(
      'data' => t('Actions'),
      'class' => array('ms_products_purchase_actions_header'),
      'sort' => 'desc',
    ),
  );

  $query = db_select('ms_product_purchases', 'd');
  $query->leftjoin('ms_products_plans', 'p', 'd.pid = p.pid');
  $query->leftjoin('users', 'u', 'd.uid = u.uid');
  $query->fields('d', array('current_payments', 'max_payments', 'expiration', 'start_date', 'id', 'pid', 'uid', 'status'));
  $query->addField('p', 'name', 'product_name');
  $query->fields('u', array('name'));
  $query = $query->extend('TableSort')->orderByHeader($headers);
  $query = $query->extend('PagerDefault')->limit(20);

  if (isset($_GET['name'])) {
    $name = $_GET['name'];
    $query->condition('u.name', '%' . $name . '%', 'LIKE');
  }

  // execute the query
  $result = $query->execute();
  $content = '';

  $rows = array();
  $attr = array('id' => 'ms-purchases-table');
  foreach ($result as $purchase) {
    $actions = array(
      l(t('Edit'), 'admin/structure/' . $module . '/purchases/edit/' . $purchase->id),
      l(t('Delete'), 'admin/structure/' . $module . '/purchases/delete/' . $purchase->id, array('attributes' => array('class' => array('txn_del')))),
    );
    $rows[] = array(
      array(
        'data' => format_date($purchase->start_date, 'small'),
        'class' => array('ms_products_purchase_start_date'),
      ),
      array(
        'data' => ($purchase->expiration ? format_date($purchase->expiration, 'small') : 'None'),
        'class' => array('ms_products_purchase_expiration'),
      ),
      array('data' => l($purchase->name, 'user/' . $purchase->uid), array('class' => 'ms_products_purchase_user')),
      array(
        'data' => $purchase->product_name,
        'class' => array('ms_products_product_name'),
      ),
      array(
        'data' => ms_products_get_purchase_status_text($purchase->status),
        'class' => array('ms_products_purchase_status'),
      ),
      array(
        'data' => $purchase->current_payments . '/' . ($purchase->max_payments ? $purchase->max_payments : 'Unlimited'),
        'class' => array('ms_products_purchase_current_payments'),
      ),
      array(
        'data' => implode($actions, ' | '),
        'class' => array('ms_products_purchase_actions'),
      ),
    );
  }

  // Add the name filter
  $filters = drupal_get_form('ms_core_get_filter_form', array('name' => $name));
  $content .= drupal_render($filters);

  $content .= theme('table', array('header' => $headers, 'rows' => $rows, 'attributes' => $attr));

  // add the content
  $build['content'] = array('#markup' => $content);

  // Add the pager
  $build['pager'] = array(
    '#theme' => 'pager',
    '#weight' => 5,
  );

  return $build;
}

