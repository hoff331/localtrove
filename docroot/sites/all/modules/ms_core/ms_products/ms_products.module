 */
function ms_products_ms_products_cancel($account, $purchase, $plan) {
  if (module_exists('rules')) {
    rules_invoke_event('ms_products_event_purchase_cancel', $account, $purchase, $plan);
  }
}

/**
 * Implementation of hook_ms_products_payment().
 */
function ms_products_ms_products_payment($account, $purchase, $plan) {
  if (module_exists('rules')) {
    rules_invoke_event('ms_products_event_purchase_payment', $account, $purchase, $plan);
  }
}

/**
 * Saves a product plan
 */
function ms_products_plan_save($type, $plan) {
  $info = ms_products_get_product_type($type);
  if (!empty($plan->pid)) {
    drupal_write_record($info['plans_table'], $plan, 'pid');
  }
  else {
    drupal_write_record($info['plans_table'], $plan);
  }
}

/**
 * Saves a product purchase
 */
function ms_products_purchase_save($type, $purchase) {
  $info = ms_products_get_product_type($type);
  if (!empty($purchase->id)) {
    drupal_write_record($info['purchases_table'], $purchase, 'id');
  }
  else {
    drupal_write_record($info['purchases_table'], $purchase);
  }
}

/**
 * Build a schema for a product type
 */
function ms_products_build_schema($type, $plan_machine_name, $plans_table, $purchases_table) {
  $schema[$plans_table] = drupal_get_schema('ms_products_plans');
  $schema[$purchases_table] = drupal_get_schema('ms_products_purchases');

  // Change the export array
  $schema[$plans_table]['export']['identifier'] = $plan_machine_name;
  $schema[$plans_table]['export']['default hook'] = 'default_' . $plan_machine_name;
  $schema[$plans_table]['export']['api']['owner'] = $type;
  $schema[$plans_table]['export']['api']['api'] = 'default_' . $plans_table;

  return $schema;
}

/**
 * Gets all of the products info
 */
function ms_products_get_products_info() {
  $products_info = module_invoke_all('ms_products_api_info');
  foreach ($products_info as $product_type => &$info) {
    // Set some defaults
    if (!isset($info['plans_table'])) {
      $info['plans_table'] = 'ms_products_plans';
    }
    if (!isset($info['purchases_table'])) {
      $info['purchases_table'] = 'ms_products_purchases';
    }
    if (!isset($info['plan_machine_name'])) {
      $info['plan_machine_name'] = $product_type;
    }
    if (!isset($info['plan_machine_name_plural'])) {
      $info['plan_machine_name_plural'] = $product_type . 's';
    }
    if (!isset($info['purchase_machine_name'])) {
      $info['purchase_machine_name'] = $product_type . '_purchase';
    }
    if (!isset($info['purchase_machine_name_plural'])) {
      $info['purchase_machine_name_plural'] = $product_type . '_purchases';
    }
  }

  return $products_info;
}
