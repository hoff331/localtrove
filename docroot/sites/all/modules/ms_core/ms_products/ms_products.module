/**
 * Implements hook_tokens
 */
function ms_products_tokens($type, $tokens, $data = array(), $options = array()) {
  $replacements = array();

  if ($type == 'ms_product_purchase' && !empty($data['ms_product_purchase'])) {
    $object = $data['ms_product_purchase'];
    foreach ($tokens as $name => $original) {
      switch ($name) {
        case 'currentPayments':
          $replacements[$original] = $object->current_payments;
          break;
        case 'maxPayments':
          $replacements[$original] = $object->max_payments;
          break;
        case 'purchaseStatus':
          $replacements[$original] = ms_products_get_purchase_status_text($object->status);
          break;
        case 'startDate':
          $replacements[$original] = format_date($object->start_date, 'small');
          break;
        case 'expirationDate':
          $replacements[$original] = format_date($object->expiration, 'small');
          break;
        case 'renewLink':
          $replacements[$original] = ms_products_get_renewal_link($object->mpid, $object->mid);
          break;
      }
    }
  }

  if ($type == 'ms_products_plan' && !empty($data['ms_products_plan'])) {
    $object = $data['ms_products_plan'];
    foreach ($tokens as $name => $original) {
      switch ($name) {
        case 'planName':
          $replacements[$original] = $object->name;
          break;
        case 'planDescription':
          $replacements[$original] = $object->description;
          break;
        case 'paymentPlan':
          $replacements[$original] = ms_core_get_recurring_string($object, $object->recurring);
          break;
      }
    }
  }

  return $replacements;
}

